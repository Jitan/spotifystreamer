<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitem_height"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/listitem_search_imageview"
        android:layout_width="@dimen/listitem_imageview"
        android:layout_height="@dimen/listitem_imageview"
        android:contentDescription="@string/artist_thumbnail"
        />
    <TextView
        android:id="@+id/listitem_search_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        style="@style/ListText"
        />
</LinearLayout>