<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitem_height"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/listitem_track_imageview"
        android:layout_width="@dimen/listitem_imageview"
        android:layout_height="@dimen/listitem_imageview"
        android:contentDescription="@string/album_thumbnail"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/listitem_track_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            style="@style/ListText"
            />
        <TextView
            android:id="@+id/listitem_track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ListText"
            />
    </LinearLayout>
</LinearLayout>